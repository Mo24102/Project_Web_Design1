@model MyProject.Models.User
@{
    ViewData["Title"] = "Signup";
}
<link href="~/css/StyleSignup.css" rel="stylesheet" />

<div class="signup">
    <h3>Welcome to Our System</h3>
    <form asp-action="Signup" method="post" id="SignupForm">
        <div>
            <label asp-for="@Model.Name">Full Name</label>
            <input asp-for="@Model.Name" id="Name" />
            <br />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="@Model.Email">Email Address</label>
            <input asp-for="@Model.Email" id="Email" />
            <br />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="@Model.Password">Password</label>
            <input asp-for="@Model.Password" id="Password" type="password" />
            <br />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <input type="submit" value="Signup" />
        <a asp-action="Login" class="btn-primary">Cancel</a>
    </form>
</div>
<script src="~/js/JavaScriptSignup.js"></script>