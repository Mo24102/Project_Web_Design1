@{
    Layout = "_Layout";
}
@model List<MyProject.Models.Student>

<h1 class="text-center my-4 text-primary">📚 Show All Students</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Age</th>
                                <th>Department</th>
                                <th>Semester</th>
                                <th>Fees</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stud in Model)
                            {
                                <tr>
                                    <td>@stud.Id</td>
                                    <td>@stud.Name</td>
                                    <td>@stud.Age</td>
                                    <td>@stud.department</td>
                                    <td>@stud.semester</td>
                                    <td>@stud.Fees.ToString("C")</td>
                                    <td>
                                        <a asp-controller="Student" asp-action="Edit" class="btn btn-warning" asp-route-id="@stud.Id">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteStudent" asp-controller="Student" asp-route-id="@stud.Id" class="btn btn-danger"
                                           onclick="return confirm('Are you sure you want to delete this student?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
