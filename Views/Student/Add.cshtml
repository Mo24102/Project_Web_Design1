@using MyProject.Models
@model MyProject.Models.Student

@{
    Layout = "_Layout";
}

<h1 class="text-center my-4 text-primary">📚 Add New Student To The Portal</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <form method="post" asp-action="Add" asp-controller="Student">

                        <!-- Name Field -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"> Name</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Student Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Age Field -->
                        <div class="mb-3">
                            <label asp-for="Age" class="form-label fw-bold"> Age</label>
                            <input type="number" class="form-control" asp-for="Age" placeholder="Enter Student Age" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <!-- Fees Field -->
                        <div class="mb-3">
                            <label asp-for="Fees" class="form-label fw-bold"> Fees</label>
                            <input type="number" step="0.01" class="form-control" asp-for="Fees" placeholder="Enter Student Fees" />
                            <span asp-validation-for="Fees" class="text-danger"></span>
                        </div>

                        <!-- Department Field -->
                        <div class="mb-3">
                            <label asp-for="department" class="form-label fw-bold"> Department</label>
                            <select asp-for="department" class="form-select" asp-items="@Html.GetEnumSelectList(typeof(Department))">
                                <option value="" disabled selected>-- Select Department --</option>
                            </select>
                            <span asp-validation-for="department" class="text-danger"></span>
                        </div>

                        <!-- Semester Field -->
                        <div class="mb-4">
                            <label asp-for="semester" class="form-label fw-bold"> Semester</label>
                            <select asp-for="semester" class="form-select" asp-items="@Html.GetEnumSelectList(typeof(Semseter))">
                                <option value="" disabled selected>-- Select Semester --</option>
                            </select>
                            <span asp-validation-for="semester" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg"> Save Student</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/form-validation.js"></script>
